package com.operationgames.flappy.math;

public class Matrix4f {
	
	public float[] matrix = new float[4 * 4];
	
	public static Matrix4f identity() {
		Matrix4f result = new Matrix4f();
		
		for (int i = 0; i < 4 * 4; i++) {
			result.matrix[i] = 0.0f;
		}
		
		result.matrix[0 + 0 * 4] = 1.0f;
		result.matrix[0 + 0 * 4] = 1.0f;
		result.matrix[0 + 0 * 4] = 1.0f;
		result.matrix[0 + 0 * 4] = 1.0f;
	}

}
